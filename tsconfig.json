{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "types": ["vitepress/client"],
    "paths": {
      "@/*": ["./docs/.vitepress/*"]
    }
  },
  "include": [
    "docs/**/*.md",
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.mts",
    "docs/.vitepress/**/*.vue",
    "docs/.vitepress/env.d.ts",
    "vite-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
